{
  "name": "@douglasneuroinformatics/psychojs",
  "type": "module",
  "version": "2024.1.0",
  "private": true,
  "packageManager": "pnpm@9.11.0",
  "description": "Helps run in-browser neuroscience, psychology, and psychophysics experiments",
  "author": {
    "name": "Alain Pitiot"
  },
  "license": "MIT",
  "exports": {
    ".": "./src/index.js",
    "./css": "./src/index.css",
    "./package.json": "./package.json"
  },
  "main": "./src/index.js",
  "engines": {
    "node": ">=14.15.0",
    "npm": ">=6.14.8"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "format": "prettier --write .",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "csslint src",
    "lint:js": "eslint src",
    "lint:scripts": "eslint scripts --ext .cjs",
    "start": "npm run build"
  },
  "dependencies": {
    "@pixi/filter-adjustment": "^4.1.3",
    "a11y-dialog": "^7.5.0",
    "docdash": "^1.2.0",
    "esbuild-plugin-glsl": "^1.0.5",
    "howler": "^2.2.1",
    "log4javascript": "github:Ritzlgrmft/log4javascript",
    "pako": "^1.0.10",
    "pixi-filters": "^5.0.0",
    "pixi.js-legacy": "^6.0.4",
    "seedrandom": "^3.0.5",
    "tone": "^14.7.77",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@douglasneuroinformatics/eslint-config": "^5.1.8",
    "@douglasneuroinformatics/prettier-config": "^0.0.1",
    "@douglasneuroinformatics/tsconfig": "^1.0.2",
    "@types/node": "20.x",
    "csslint": "^1.0.5",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "@pixi/core": "6.x",
        "@pixi/filter-alpha": "6.x",
        "@pixi/filter-blur": "6.x"
      }
    }
  }
}
